<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="by.drinevskiy.fitpal.presentation.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_add_product"
        android:name="by.drinevskiy.fitpal.presentation.add.AddFragment"
        tools:layout="@layout/fragment_add" />

    <fragment
        android:id="@+id/navigation_purchase"
        android:name="by.drinevskiy.fitpal.presentation.profile.purchase.PurchaseFragment"
        tools:layout="@layout/fragment_purchase" >
        <action
            android:id="@+id/action_navigation_purchase_to_navigation_purchase_detail_fragment"
            app:destination="@id/navigation_purchase_detail" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="by.drinevskiy.fitpal.presentation.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_navigation_profile_to_navigation_purchase"
            app:destination="@id/navigation_purchase" />
    </fragment>
    <fragment
        android:id="@+id/navigation_purchase_detail"
        android:name="by.drinevskiy.fitpal.presentation.profile.purchase.PurchaseDetailFragment"
        android:label="fragment_purchase_detail"
        tools:layout="@layout/fragment_purchase_detail" >
        <argument
            android:name="purchaseItem"
            app:argType="integer"
            android:defaultValue="-1" />
    </fragment>
    <fragment
        android:id="@+id/navigation_kitchen"
        android:name="by.drinevskiy.fitpal.presentation.kitchen.KitchenFragment"
        android:label="fragment_kitchen"
        tools:layout="@layout/fragment_kitchen" >
        <action
            android:id="@+id/action_navigation_kitchen_to_fridgeFragment"
            app:destination="@id/navigation_fridge" />
    </fragment>
    <fragment
        android:id="@+id/navigation_fridge"
        android:name="by.drinevskiy.fitpal.presentation.kitchen.fridge.FridgeFragment"
        android:label="fragment_fridge"
        tools:layout="@layout/fragment_fridge" />
</navigation>